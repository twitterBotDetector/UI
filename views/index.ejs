            <div class="card-footer bg-transparent border-dark">
             <ul class="list-unstyled list-inline font-small mt-3">
              <li class="list-inline-item pr-2 white-text"><i class="fa fa-clock-o pr-1"></i>05/10/2015</li>
             </ul>
            </div>
           <!-- Card footer --> 

